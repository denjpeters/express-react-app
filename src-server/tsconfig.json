{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "../build",
    "rootDir": "./",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../src-common"
    }
  ],
  "exclude": [
    "**/node_modules"
  ]
}
