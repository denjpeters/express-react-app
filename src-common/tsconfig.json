{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "../build/src-common/src",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
