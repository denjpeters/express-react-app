{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true
  },
  "references": [
    {
      "path": "../src-common"
    }
  ],
  "include": [
    "src"
  ],
  "paths": {
    "src-common": [
      "src-common/index"
    ]
  }
}
